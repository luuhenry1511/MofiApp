<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8sp"
    android:background="#F8F8F8"
    tools:context=".ui.activiy_chitietgd">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="CHI TIẾT GIAO DỊCH"
        android:textColor="#2cbff5"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:text="Loại giao dịch"
                    android:textColor="#000"

                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtKhoantien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:enabled="false"
                android:text="Giao dịch thu"
                android:textColor="@color/contentTextColor"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                >

                <TextView
                    android:id="@+id/TextPhanLoai"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:text="Phân loại"
                    android:textColor="#000"

                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Spinner
                android:layout_marginLeft="10sp"
                android:id="@+id/spinphannhom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff">
                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:text="Số tiền"
                    android:textColor="#000"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/edsotien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="Nhập số tiền"
                android:inputType="number"
                android:textColor="@color/darkTextColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                >
                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="#ffffff"
                    android:text="Lý do"
                    android:textColor="#000"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/edlydo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:ems="10"
                android:hint="Nhập lý do giao dịch"
                android:textColor="@color/contentTextColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ffffff"
                >
                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:text="Ngày Giao dịch"
                    android:textColor="#000"
                    android:background="#ffffff"
                    android:textSize="19sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp" >

                <EditText
                    android:layout_marginLeft="15sp"
                    android:id="@+id/etngaygiaodich"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:hint="Ngày giao dịch"
                    android:inputType="date"
                    android:textColor="#000"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">
                </EditText>

                <ImageView
                    android:id="@+id/calendr"
                    android:layout_width="59dp"
                    android:layout_height="33dp"
                    android:layout_alignStart="@+id/etngaygiaodich"
                    android:layout_alignBottom="@+id/etngaygiaodich"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="321dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="17dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_plus" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_marginTop="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="295dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/round_bg"
                        android:text="Chỉnh sửa"
                        android:textColor="@color/whiteTextColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="187dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_bg"
                        android:text="Xóa"
                        android:textColor="@color/whiteTextColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/savegd"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:background="@drawable/round_bg"
                        android:paddingRight="5sp"
                        android:text="Lưu"
                        android:textColor="@color/whiteTextColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/huycs"
                        android:layout_width="185dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5sp"
                        android:background="@drawable/round_bg"
                        android:padding="10dp"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:text="HỦY"
                        android:textColor="@color/whiteTextColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
