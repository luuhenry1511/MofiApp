<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ThuChi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/main_edittext"
            android:padding="5dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#343f56"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/side_nav_bar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/danhsach"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/themthuchi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:orientation="horizontal"
        android:padding="5sp">

        <EditText
            android:id="@+id/themloaithu"
            android:layout_width="465dp"
            android:layout_height="50dp"
            android:layout_marginTop="3sp"
            android:layout_weight="1.5"
            android:capitalize="sentences"
            android:hint="Thêm tên khoản tiền"
            android:singleLine="true" />

        <Spinner
            android:id="@+id/spinthemthuchi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5sp"
            android:layout_weight="1.5">

        </Spinner>

        <ImageView
            android:id="@+id/addcaidat"
            android:layout_width="40dp"
            android:layout_height="46dp"
            android:paddingTop="9dp"
            android:src="@drawable/ic_plus"
            android:text="+" />
    </LinearLayout>

</RelativeLayout>